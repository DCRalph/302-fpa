model BlogPostLike {
  id        String   @id @default(cuid())

  postId    String
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogComment {
  id          String   @id @default(cuid())
  post        BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId      String
  authorId    String
  author      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  content     String
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subComments BlogComment[] @relation("ParentComment")

  parentCommentId String?
  parentComment   BlogComment? @relation("ParentComment", fields: [parentCommentId], references: [id], onDelete: Cascade)

  reports BlogReport[]

  @@index([postId])
}

// CMS-like primitives

model NewsletterSubscription {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  createdAt   DateTime  @default(now())
  confirmedAt DateTime?
}

model ContactMessage {
  id        String    @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String?
  message   String
  status    String    @default("open") // open, closed
  createdAt DateTime  @default(now())
  closedAt  DateTime?
}

model SiteSettings {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  key         String   @unique
  value       String
  description String?
}

model BlogReport {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  postId    String?
  post      BlogPost? @relation(fields: [postId], references: [id], onDelete: Cascade)

  commentId    String?
  comment      BlogComment? @relation(fields: [commentId], references: [id], onDelete: Cascade)

  userId    String
  user      User     @relation("UserBlogReports", fields: [userId], references: [id], onDelete: Cascade)

  reason      String
  details     String?

  resolvedAt  DateTime? 
  resolvedById  String?
  resolvedByUser User?     @relation("UserBlogReportsResolved", fields: [resolvedById], references: [id], onDelete: Cascade)
  action ReportAction? @default(OTHER)
  adminNote   String?


  @@index([userId])
  @@index([postId])
  @@index([commentId])

}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model EmailsSent {
  id        String @id @default(cuid())
  from      String
  to        String
  subject   String
  html      String
  text      String
  replyTo   String?
  provider  String // e.g., "resend", "sendgrid", "mailgun", "smtp"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


}